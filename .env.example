# GitHub Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
REPOSITORY_OWNER=your_github_username
REPOSITORY_NAME=your_repo_name

# LLM Configuration
# Choose one provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=sk-your_openai_api_key_here
LLM_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (if using Anthropic)
# ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
# LLM_MODEL=claude-3-opus-20240229

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=False

# Automation Behavior
# CREATE_PR: Create pull requests for documentation updates (recommended)
CREATE_PR=True

# AUTO_COMMIT: Directly commit to the branch (use with caution)
AUTO_COMMIT=False

# POST_REVIEW_AS_ISSUE: Post code reviews as GitHub issues instead of commit comments
POST_REVIEW_AS_ISSUE=False
